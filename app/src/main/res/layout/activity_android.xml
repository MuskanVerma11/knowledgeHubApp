<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Android_activity">

    <TextView
        android:id="@+id/Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="serif"
        android:text="Android App Development"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/languageUsed"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FD6D6D"
        app:cardCornerRadius="190dp"
        app:layout_constraintStart_toStartOf="@+id/Heading"
        app:layout_constraintTop_toBottomOf="@+id/Heading">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/java" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/languageUsed1"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FD6D6D"
        app:cardCornerRadius="190dp"
        app:layout_constraintEnd_toEndOf="@id/Heading"
        app:layout_constraintStart_toEndOf="@id/languageUsed"
        app:layout_constraintTop_toBottomOf="@+id/Heading">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component1"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kotlin" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/forUI"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="40dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FD6D6D"
        app:cardCornerRadius="190dp"
        app:layout_constraintEnd_toEndOf="@id/languageUsed"
        app:layout_constraintStart_toStartOf="@id/languageUsed"
        app:layout_constraintTop_toBottomOf="@id/languageUsed"
        tools:layout_editor_absoluteX="44dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/xml" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fordatabase"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="40dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FD6D6D"
        app:cardCornerRadius="190dp"
        app:layout_constraintEnd_toEndOf="@id/languageUsed1"
        app:layout_constraintStart_toStartOf="@id/languageUsed1"
        app:layout_constraintTop_toBottomOf="@id/languageUsed1"
        tools:layout_editor_absoluteX="44dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component3"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/firebase" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/software"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="40dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FD6D6D"
        app:cardCornerRadius="190dp"
        app:layout_constraintEnd_toStartOf="@id/fordatabase"
        app:layout_constraintStart_toEndOf="@id/forUI"
        app:layout_constraintTop_toBottomOf="@id/forUI"
        tools:layout_editor_absoluteX="44dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/androidstudio" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#C5CAE9"
        android:text="Back"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>