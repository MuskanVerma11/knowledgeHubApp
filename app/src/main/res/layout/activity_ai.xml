<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AI_activity">


    <TextView
        android:id="@+id/Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Artificial Intelligence"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/datascience"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#98D4BB"
        app:cardCornerRadius="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Heading">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/datascience" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/machinelearning"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="35dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#98D4BB"
        app:cardCornerRadius="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Heading">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component1"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/machinelearning" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/deeplearning"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="40dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#98D4BB"
        app:cardCornerRadius="190dp"
        app:layout_constraintEnd_toEndOf="@id/datascience"
        app:layout_constraintStart_toStartOf="@id/datascience"
        app:layout_constraintTop_toBottomOf="@id/datascience"
        tools:layout_editor_absoluteX="44dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/deeplearning" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dataengineer"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="40dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#98D4BB"
        app:cardCornerRadius="190dp"
        app:layout_constraintEnd_toEndOf="@id/machinelearning"
        app:layout_constraintStart_toStartOf="@id/machinelearning"
        app:layout_constraintTop_toBottomOf="@id/machinelearning"
        tools:layout_editor_absoluteX="44dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component3"
                android:layout_width="225dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/dataengineer" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bigdata"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="40dp"
        android:elevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#98D4BB"
        app:cardCornerRadius="190dp"
        app:layout_constraintEnd_toStartOf="@id/dataengineer"
        app:layout_constraintStart_toEndOf="@id/deeplearning"
        app:layout_constraintTop_toBottomOf="@id/deeplearning"
        tools:layout_editor_absoluteX="44dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="190dp">

            <ImageView
                android:id="@+id/component4"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/bigdata" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#C5CAE9"
        android:text="Back"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#C5CAE9"
        android:text="Roadmap"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>